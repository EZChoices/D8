generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(uuid())
  slug        String   @unique
  sku         String
  name        String
  description String
  priceCents  Int
  category    String
  potencyMg   Int
  count       Int?
  flavor      String?
  image       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Order {
  id            String   @id @default(uuid())
  items         String
  email         String?
  shipping      String
  subtotalCents Int
  shippingCents Int
  totalCents    Int
  paymentMethod String
  onchain       String
  status        String
  notes         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Subscription {
  id        String   @id @default(uuid())
  email     String
  createdAt DateTime @default(now())
  source    String
}

model ContactMessage {
  id        String   @id @default(uuid())
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
}
